# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Clear Piggy Project Configuration
CLEAR_PIGGY_PROJECT_PATH=/path/to/your/clear-piggy/project
CLEAR_PIGGY_COMPONENTS_PATH=src/components
CLEAR_PIGGY_PAGES_PATH=src/pages

# Analysis Configuration
ANALYSIS_OUTPUT_DIR=./analysis-reports
ENABLE_DETAILED_LOGGING=true

# Mobile Optimization Thresholds
MIN_TOUCH_TARGET_SIZE=44
MOBILE_BREAKPOINT=768
TABLET_BREAKPOINT=1024

# Supabase Configuration (optional for integration analysis)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Plaid Configuration (optional for integration analysis)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret